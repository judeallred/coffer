{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["dom", "dom.iterable", "es2015", "es2017", "es2020"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true
  },
  "imports": {
    "preact": "https://esm.sh/preact@10.19.2",
    "preact/": "https://esm.sh/preact@10.19.2/",
    "styled-components": "https://esm.sh/styled-components@6.1.1",
    "@std/assert": "jsr:@std/assert@^0.218.2",
    "chia-wallet-sdk-wasm": "npm:chia-wallet-sdk-wasm@^0.29.0",
    "puppeteer": "npm:puppeteer@21.11.0"
  },
  "tasks": {
    "lint": "deno lint --ignore=src/wasm,node_modules,dist,pnpm-lock.yaml",
    "format": "deno fmt --check --ignore=src/wasm,node_modules,dist,pnpm-lock.yaml",
    "fmt": "deno task format",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run --watch dev.ts",
    "build": "deno run --allow-all build.ts",
    "test": "deno test --allow-all",
    "test:browser": "deno test --allow-all tests/browser/",
    "test:integration": "deno test --allow-all tests/integration/"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-assign",
        "no-implicit-declare-namespace",
        "prefer-const"
      ],
      "exclude": [
        "no-undef",
        "no-explicit-any"
      ]
    }
  }
}
